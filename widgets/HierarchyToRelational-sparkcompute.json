{
  "metadata": {
    "spec-version": "1.5",
    "label": "Hierarchy to Relational"
  },
  "display-name": "Hierarchy to Relational",
  "configuration-groups": [
    {
      "label": "Hierarchy Configuration",
      "properties": [
        {
          "label": "Parent -> Child relationships",
          "name": "parentChildMappingField",
          "widget-type": "keyvalue",
          "widget-attributes": {
            "showDelimiter": "false",
            "key-placeholder": "Parent field",
            "value-placeholder": "Child field",
            "kv-delimiter": "=",
            "delimiter": ";"
          }
        },
        {
          "label": "Start With",
          "name": "startWith",
          "widget-type": "ds-multiplevalues",
          "widget-attributes": {
            "delimiter": ",",
            "values-delimiter": "=",
            "numValues": "1",
            "placeholders": [
              "Boolean expression"
            ]
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "label": "Level field name",
          "name": "levelField",
          "widget-type": "textbox",
          "default": "Level"
        },
        {
          "label": "Top field name",
          "name": "topField",
          "widget-type": "textbox",
          "default": "Top"
        },
        {
          "label": "Bottom field name",
          "name": "bottomField",
          "widget-type": "textbox",
          "default": "Bottom"
        },
        {
          "label": "True value",
          "name": "trueValueField",
          "widget-type": "textbox",
          "default": "Y"
        },
        {
          "label": "False value",
          "name": "falseValueField",
          "widget-type": "textbox",
          "default": "N"
        },
        {
          "label": "Max depth",
          "name": "maxDepthField",
          "widget-type": "textbox",
          "default": 50
        },
        {
          "label": "Connect by root",
          "name": "connectByRoot",
          "widget-type": "keyvalue",
          "widget-attributes": {
            "showDelimiter": "false",
            "key-placeholder": "Field name",
            "value-placeholder": "Alias",
            "kv-delimiter": "=",
            "delimiter": ";"
          }
        },
        {
          "label": "Sibling order",
          "name": "siblingOrder",
          "widget-type": "toggle",
          "widget-attributes": {
            "default": "true",
            "on": {
              "value": "true",
              "label": "Ascending"
            },
            "off": {
              "value": "false",
              "label": "Descending"
            }
          }
        },
        {
          "label": "Path Fields",
          "name": "pathFields",
          "widget-type": "ds-multiplevalues",
          "widget-attributes": {
            "delimiter": ",",
            "values-delimiter": "=",
            "numValues": "4",
            "placeholders": [
              "Field name for vertices",
              "Path separator",
              "Alias for the path field",
              "Alias for the path length field"
            ]
          }
        },
        {
          "label": "Perform an in-memory broadcast join",
          "name": "broadcastJoin",
          "widget-type": "toggle",
          "widget-attributes": {
            "default": "true",
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            }
          }
        }
      ]
    }
  ]
}
